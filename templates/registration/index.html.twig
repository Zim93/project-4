{% extends 'base.html.twig' %}

{% block title %}Hello RegistrationController!{% endblock %}

{% block body %}
    <main class="container">
        <div class="col-8 col-md-6 col-lg-4 px-3 border border-3 position-absolute top-50 start-50 translate-middle register">
            <h3 class="text-center">S'inscrire</h1>
            {{ form_start(registrationForm) }}  
            <div class="form-group">
                {{ form_label(registrationForm.firstname,'Pr√©nom')}}
                {{ form_widget(registrationForm.firstname, {'attr': {'class': 'form-control'}})}}
            </div>
            <div class="form-group">
                {{ form_label(registrationForm.lastname,'Nom')}}
                {{ form_widget(registrationForm.lastname, {'attr': {'class': 'form-control'}})}}
            </div>
            <div class="form-group">
                {{ form_label(registrationForm.email,'E-mail')}}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}})}}
                {{ form_errors(registrationForm.email)}}
            </div>
                {{ form_label(registrationForm.plainPassword,'Mot de passe')}}
                {{ form_errors(registrationForm.plainPassword)}}
                {% if alert_error is defined %}
                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control is-invalid'}})}}
                    <div class="invalid-feedback d-block">{{alert_error}}</div>
                {% else %}
                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}})}}
                {% endif %}
            <div class="form-group">
                {{ form_label(registrationForm.confirmPassword,'Confirmer le mot de passe')}}
                {{ form_errors(registrationForm.confirmPassword)}}
                {% if alert_error is defined %}
                    {{ form_widget(registrationForm.confirmPassword, {'attr': {'class': 'form-control is-invalid'}})}}    
                    <div class="invalid-feedback d-block">{{alert_error}}</div>
                {% else %}
                    {{ form_widget(registrationForm.confirmPassword, {'attr': {'class': 'form-control'}})}}
                {% endif %}
            </div>
            <div class="text-center">
            {{ form_widget(registrationForm.submit, {'label': 'Enregistrer', 'attr': {'class': 'btn btn-primary my-2'}})}}
            </div>
            {{ form_end(registrationForm) }}
        </div>
    </main>
{% endblock %}
