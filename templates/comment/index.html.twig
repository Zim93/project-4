{% extends 'base.html.twig' %}

{% block title %}Comment index{% endblock %}

{% block body %}
    <style>
        main{
            height:70vh;
        }
    </style>
    <main class="container d-flex flex-column justify-content-center my-5">
        <h1>Mes commentaire</h1>

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Maison</th>
                    <th>Commentaire</th>
                    <th>Note</th>
                </tr>
            </thead>
            <tbody>
            {% for comment in comments %}
                <tr>
                    <td><a href="{{ path('app_house_show', {'id': comment.house.id}) }}">{{ comment.house.name }}<a></td>
                    <td>{{ comment.message }}</td>
                    <td>{{ comment.note }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucun commentaire trouv√©</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </main>
{% endblock %}
