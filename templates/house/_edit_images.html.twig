<div>
    <div class="d-flex row">
        {% for image in house.attachments %}
            <div class="col-3 d-flex justify-content-center image-upload" data-id="{{image.id}}">
                <img data-id="{{image.id}}" src="/images/houses/{{image.url}}" height="auto" width="200px" />
                <span data-id="{{image.id}}" class="close-cross text-center">X</span>
            </div>
        {% endfor %}
    </div>
</div>

<style>
    .close-cross{
        cursor:pointer;
    } 
    
    .close-cross{
        position: relative;
        width: 20px;
        margin: 0 !important;
        top: 0px;
        left: 0px;
    }
</style>